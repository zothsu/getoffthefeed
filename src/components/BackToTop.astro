---
export interface BackToTopType {
  label: string;
  icon: string;
}

const backToTopData: BackToTopType = {
  label: 'Back to Top',
  icon: 'M12 19V5m0 0l-7 7m7-7l7 7',
};
---

<div
  class="fixed bottom-4 right-4 z-50"
  x-data="{ isVisible: false }"
  x-init="$nextTick(() => {
    window.addEventListener('scroll', () => {
      isVisible = window.scrollY > 300;
    });
  })"
>
  <a
    href="#main"
    data-type="smooth"
    x-show="isVisible"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 translate-y-4"
    class="flex items-center justify-center w-10 h-10 bg-dark-space border border-neon-cyan text-neon-cyan rounded-full hover:bg-neon-cyan/40 transition duration-300 shadow-lg shadow-neon-cyan/20"
    title={backToTopData.label}
    style="display: none;"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d={backToTopData.icon}
      />
    </svg>
  </a>
</div>