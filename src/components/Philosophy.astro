---
import FeatureCard from "./ui/FeatureCard.astro";

export interface PhilosophyItemType {
  id: string;
  title: string;
  description: string;
  icon: string;
  iconColor: 'neon-cyan' | 'neon-purple';
}

const philosophyData: PhilosophyItemType[] = [
  {
    id: 'innovation',
    title: 'Innovation First',
    description:
      'I embrace cutting-edge technologies to create solutions that anticipate the future.',
    icon: 'innovation',
    iconColor: 'neon-cyan',
  },
  {
    id: 'user-centric',
    title: 'User-Centric Design',
    description:
      'Every pixel and line of code is crafted to deliver intuitive, engaging, and seamless experiences for users.',
    icon: 'user-centric',
    iconColor: 'neon-purple',
  },
  {
    id: 'precision',
    title: 'Relentless Precision',
    description:
      'I pursue perfection in every detail, ensuring robust, scalable, and high-performance solutions.',
    icon: 'precision',
    iconColor: 'neon-cyan',
  },
];

const sectionLabel = '// MY PHILOSOPHY';
const sectionTitle = 'Crafting the <span class="text-neon-cyan neon-text">Future</span> with Purpose';
---

<section class="pb-20 lg:pb-24 relative overflow-hidden">
  <div class="absolute inset-0 cyber-grid opacity-20"></div>
  <div class="max-w-7xl mx-auto px-4">
    <div class="mb-12 text-center">
      <span class="text-neon-purple font-code">{sectionLabel}</span>
      <h3 class="text-3xl md:text-4xl font-bold mt-2" set:html={sectionTitle} />
      <div class="h-1 w-24 bg-neon-cyan mx-auto mt-4"></div>
    </div>
    <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-8">
      {philosophyData.map((item) => (
        <FeatureCard
          title={item.title}
          description={item.description}
          icon={item.icon}
          iconColor={item.iconColor}
        />
      ))}
    </div>
  </div>
</section>