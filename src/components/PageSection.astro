---
import ColoredText from './ColoredText.astro';

export interface PageSectionProps {
  label: string;
  title: string;
  description: string;
  lastUpdated?: string; // Optional for pages without update date
  content: string; // HTML content for the section
}

const { label, title, description, lastUpdated, content } = Astro.props;
---

<section class="pb-20 pt-32 relative overflow-hidden">
  <div class="absolute inset-0 cyber-grid opacity-30"></div>
  <div class="absolute top-0 left-0 w-96 h-96 bg-neon-cyan/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-neon-purple/10 rounded-full blur-3xl"></div>

  <div class="max-w-6xl mx-auto px-4 md:px-16 relative">
    <!-- Header -->
    <div class="mb-12 text-center">
      <span class="text-neon-purple font-code">{label}</span>
      <h1 class="text-3xl md:text-4xl font-bold mt-2 text-neon-cyan neon-text">
        <ColoredText text={title} wordsPerColor={1} />
      </h1>
      <div class="h-1 w-24 bg-neon-cyan mx-auto mt-4"></div>
      <p class="text-gray-300 max-w-3xl mx-auto mt-6">{description}</p>
      {lastUpdated && (
        <p class="text-gray-400 text-sm mt-2">Last Updated: {lastUpdated}</p>
      )}
    </div>

    <!-- Content -->
    <div class="post-content w-full relative text-gray-300" set:html={content} />
  </div>
</section>