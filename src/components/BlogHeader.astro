---
import ColoredText from './ColoredText.astro';

export interface BlogHeaderType {
  label: string;
  title: string;
  description: string;
}

const blogHeaderData: BlogHeaderType = {
  label: '// INSIGHTS',
  title: 'Exploring the Future of Tech',
  description:
    'Dive into my thoughts on cutting-edge technologies, development trends, and innovative solutions shaping the digital landscape.',
};
---

<section class="py-20 relative overflow-hidden">
  <div class="absolute inset-0 cyber-grid opacity-80"></div>
  <div class="absolute top-0 left-0 w-96 h-96 bg-neon-cyan/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-neon-purple/10 rounded-full blur-3xl"></div>

  <div class="max-w-7xl mx-auto px-4 relative text-center">
    <span class="text-neon-cyan font-code">{blogHeaderData.label}</span>
    <h1 class="text-4xl md:text-5xl font-bold mt-2">
      <ColoredText text={blogHeaderData.title} />
    </h1>
    <div class="h-1 w-24 bg-neon-purple mx-auto mt-4"></div>
    <p class="text-gray-300 max-w-3xl mx-auto mt-6">{blogHeaderData.description}</p>
  </div>
</section>