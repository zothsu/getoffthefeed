---
import ColoredText from './ColoredText.astro';
import ServiceCard from './ui/ServiceCard.astro';

export interface HeadingType {
  subtitle: string;
  title: string;
  highlight: string;
  description: string;
}
export interface ServiceType {
  title: string;
  description: string;
  icon: string;
  features: string[];
  borderColor: string;
  iconColor: string;
}

// heading data
const headingData: HeadingType = {
  subtitle: '//SERVICES',
  title: 'Digital Solutions Spectrum',
  highlight: 'Solutions',
  description: 'Transforming visions into immersive digital experiences with precision and innovation. Each service is calibrated to exceed conventional expectations.',
};

const servicesData: ServiceType[] = [
  {
    title: 'Immersive Frontend Development',
    description:
      'Creating responsive, intuitive, and visually striking interfaces that blur the line between digital and reality using React, Vue, Three.js, and WebGL.',
    icon: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
    features: [
      '3D Interactive Experiences',
      'Motion UI & Animations',
      'Next-gen UI Frameworks',
    ],
    borderColor: 'neon-cyan',
    iconColor: 'neon-cyan',
  },
  {
    title: 'Advanced Backend Architecture',
    description:
      'Engineering robust, scalable server solutions using Node.js, Python, and cloud infrastructure designed for performance and security.',
    icon: 'M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01',
    features: [
      'Microservices Architecture',
      'Real-time Data Processing',
      'Serverless Functions',
    ],
    borderColor: 'neon-purple',
    iconColor: 'neon-purple',
  },
  {
    title: 'AI & Data Integration',
    description:
      'Harnessing the power of machine learning and data analytics to build intelligent applications that learn, adapt, and predict.',
    icon: 'M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4',
    features: ['Chatbot Development', 'Video Generator AI', 'Image Generator AI'],
    borderColor: 'neon-cyan',
    iconColor: 'neon-cyan',
  },
];
---

<section
  id="services"
  class="py-20 lg:py-24 bg-gradient-to-b from-dark-space to-dark-space/95 relative"
>
  <div class="absolute inset-0 cyber-grid opacity-50"></div>
  <div
    class="absolute left-0 bottom-0 w-96 h-96 bg-neon-cyan/5 rounded-full blur-3xl"
  ></div>

  <div class="max-w-7xl mx-auto px-4 relative">
    <div class="mb-16 text-center">
      <span class="text-neon-purple font-code">{headingData.subtitle}</span>
      <h2 class="text-4xl md:text-5xl font-bold mt-2">
        <ColoredText text={headingData.title} wordsPerColor={1} />
      </h2>
      <div class="h-1 w-24 bg-neon-cyan mx-auto mt-4"></div>
      <p class="text-gray-300 max-w-3xl mx-auto mt-6">{headingData.description}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicesData.map((service) => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
          iconColor={service.iconColor}
          borderColor={service.borderColor}
          features={service.features}
        />
      ))}
    </div>
  </div>
</section>