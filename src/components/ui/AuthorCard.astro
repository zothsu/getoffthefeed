---
interface Props {
  image: string;
  alt: string;
  name: string;
  role: string;
  bio: string;
  class?: string;
}

const { image, alt, name, role, bio, class: className } = Astro.props;
---

<div
  class:list={[
    'mt-12 bg-dark-space/80 backdrop-blur-md border border-neon-purple/30 rounded-lg p-6 flex flex-col sm:flex-row items-center gap-6',
    className,
  ]}
>
  <img
    src={image}
    alt={alt}
    class="flex-none w-24 h-24 rounded-full border border-neon-cyan/50 object-cover"
  />
  <div>
    <h3 class="text-xl font-bold text-neon-cyan">{name}</h3>
    <p class="text-gray-400 text-sm">{role}</p>
    <p class="text-gray-300 mt-2">{bio}</p>
  </div>
</div>