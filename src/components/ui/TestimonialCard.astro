---
interface Props {
  image: string;
  quote: string;
  author: string;
  title: string;
  borderColor: 'neon-cyan' | 'neon-purple';
}

const { image, quote, author, title, borderColor } = Astro.props;
---

<div
  class={`bg-dark-space/80 backdrop-blur-md rounded-lg p-6 text-center transition-all duration-300 mb-8
    ${borderColor === 'neon-cyan'
      ? 'border border-neon-cyan/30 hover:border-neon-cyan hover:shadow-lg hover:shadow-neon-cyan/20'
      : 'border border-neon-purple/30 hover:border-neon-purple hover:shadow-lg hover:shadow-neon-purple/20'}`}
>
  <div
    class={`w-16 h-16 mx-auto rounded-full border-2 mb-4 overflow-hidden
      ${borderColor === 'neon-cyan' ? 'border-neon-cyan' : 'border-neon-purple'}`}
  >
    <img
      src={image}
      alt="Client"
      class="w-full h-full object-cover"
    />
  </div>
  <p class="text-gray-300 mb-4">{quote}</p>
  <h4
    class={borderColor === 'neon-cyan' ? 'text-neon-cyan font-bold' : 'text-neon-purple font-bold'}
  >
    {author}
  </h4>
  <p class="text-gray-400 text-sm">{title}</p>
</div>