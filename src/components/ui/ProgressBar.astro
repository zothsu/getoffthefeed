---
export interface ProgressBarProps {
  name: string;
  percentage: number;
}

const { name, percentage } = Astro.props;

// Clamp percentage between 0 and 100
const clampedPercentage = Math.max(0, Math.min(100, percentage));
---

<div>
  <div class="flex justify-between mb-1">
    <span class="text-neon-cyan">{name}</span>
    <span class="text-neon-purple">{clampedPercentage}%</span>
  </div>
  <div class="h-2 bg-dark-space border border-neon-cyan/30 rounded-full overflow-hidden">
    <div
      class="h-full bg-gradient-to-r from-neon-cyan to-neon-purple"
      style={`width: ${clampedPercentage}%`}
    ></div>
  </div>
</div>