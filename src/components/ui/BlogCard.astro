---
interface Props {
  href: string;
  image: string;
  alt: string;
  tag: string;
  date: string;
  title: string;
  description: string;
  color: 'neon-cyan' | 'neon-purple';
}

const { href, image, alt, tag, date, title, description, color } = Astro.props;
---

<article
  class="group bg-dark-space/80 backdrop-blur-md rounded-lg overflow-hidden transition-all duration-300"
  class:list={{
    'border border-neon-cyan/30 hover:border-neon-cyan hover:shadow-neon-cyan/20': color === 'neon-cyan',
    'border border-neon-purple/30 hover:border-neon-purple hover:shadow-neon-purple/20': color === 'neon-purple',
  }}
>
  <a href={href} class="block">
    <img
      src={image}
      alt={alt}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
    />
    <div class="p-6">
      <div class="flex items-center gap-2 mb-3">
        <span
          class:list={{
            'text-xs text-neon-cyan bg-neon-cyan/20 border border-neon-cyan/50 rounded-full px-2 py-1': color === 'neon-cyan',
            'text-xs text-neon-purple bg-neon-purple/20 border border-neon-purple/50 rounded-full px-2 py-1': color === 'neon-purple',
          }}
        >
          {tag}
        </span>
        <span class="text-xs text-gray-400">{date}</span>
      </div>
      <h2
        class:list={{
          'text-xl font-bold text-neon-cyan mb-2 group-hover:text-neon-cyan/80 transition-colors duration-300': color === 'neon-cyan',
          'text-xl font-bold text-neon-purple mb-2 group-hover:text-neon-purple/80 transition-colors duration-300': color === 'neon-purple',
        }}
      >
        {title}
      </h2>
      <p class="text-gray-300 text-sm mb-4">{description}</p>
    </div>
  </a>
</article>